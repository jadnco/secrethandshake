{{> header title='home'}}

<svg class="hidden-svg">
  <defs>
    <pattern id="wave-pattern" width="24" height="24" patternUnits="userSpaceOnUse" patternTransform="translate(0,-40)">
      <circle cx="0" cy="0" r="6" stroke="white" stroke-width="3" fill="transparent" />
      <circle cx="12" cy="24" r="6" stroke="white" stroke-width="3" fill="transparent" />
      <circle cx="24" cy="0" r="6" stroke="white" stroke-width="3" fill="transparent" />
    </pattern>

    <pattern id="stripe-pattern" width="10" height="3" patternUnits="userSpaceOnUse" patternTransform="rotate(45)">
      <rect width="2" height="3" fill="white" />
    </pattern>
  </defs>
</svg>

<section id="hero">
  <div class="inner">
    <div class="row">
      <div class="nine columns offset-by-one">
        <h1>Secret Handshake</h1>
        <svg id="hero-stripes" class="stripes">
          <rect class="shape" x="0" y="0" width="100%" height="100%"></rect>
          <mask id="hero-mask">
            <rect x="0" y="0" width="100%" height="100%" fill="url(#stripe-pattern)">
          </mask>
        </svg>
      </div>
      <div class="three columns offset-by-nine"><img src="images/logo-dark.svg"></div>
    </div>
  </div>
</section>

<section id="intro" class="sec">
  <div class="inner">
    <div class="row">
      <div class="twelve columns center">Secret Handshake is a monthly gathering of creative people.<br>Join us for new friendships and good conversation.</div>
    </div>
  </div>
</section>

<section id="photos" class="sec">
  <div class="inner">
    <div class="row">
      <ul id="images">
        <li><img src="images/meetup-shot-1.jpg"></li>
      </ul>
    </div>
  </div>
</section>

<section id="testimonials" class="sec">
  <div class="inner">
    <svg class="back">
      <rect class="shape" fill="url(#wave-pattern)" x="0" y="0" width="100%" height="100%"></rect>
    </svg>
    <h2 class="section-title">Testimonials</h2>
    <div class="row">
      <div class="six columns">
        <blockquote>
          <div class="quote">"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis ipsum justo, eget condimentum nulla mollis sagittis."</div>
          <div class="author">
            <div class="name">Johnny Depp</div>
            <a href="#" class="handle">Web Designer</a>
          </div>
        </blockquote>
      </div>
      <div class="six columns">
        <blockquote>
          <div class="quote">"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis ipsum justo, eget condimentum nulla mollis sagittis."</div>
          <div class="author">
            <div class="name">Johnny Depp</div>
            <a href="#" class="handle">@twitter</a>
          </div>
        </blockquote>
      </div>
    </div>
  </div>
</section>

<section id="organizers" class="sec">
  <div class="inner">
    <svg class="back">
      <rect class="shape" fill="url(#wave-pattern)" x="0" y="0" width="100%" height="100%"></rect>
      <mask id="organizers-mask">
        <rect x="0" y="0" width="100%" height="100%" fill="url(#wave-pattern)">
      </mask>
    </svg>
    <h2 class="section-title">Organizers</h2>
    <div class="row">
      <div class="three columns person">
        <img src="images/ben.jpg" class="headshot">
        <div class="name">Ben Rogers</div>
        <div class="handle"><a href="https://twitter.com/BenRogersWPG" title="Ben on Twitter">@BenRogersWPG</a></div>
      </div>
      <div class="three columns person">
        <img src="images/robyn.jpg" class="headshot">
        <div class="name">Robyn Shesterniak</div>
        <div class="handle"><a href="https://twitter.com/robynchristine" title="Robyn on Twitter">@robynchristine</a></div>
      </div>
      <div class="three columns person">
        <img src="images/melody.jpg" class="headshot">
        <div class="name">Melody Morrissette</div>
        <div class="handle"><a href="https://twitter.com/memorrissette" title="Melody on Twitter">@memorrissette</a></div>
      </div>
      <div class="three columns person">
        <img src="images/brad.jpg" class="headshot">
        <div class="name">Brad Cerasani</div>
        <div class="handle"><a href="https://twitter.com/bradcerasani" title="Brad on Twitter">@bradcerasani</a></div>
      </div>
    </div>
    <div class="row">
      <div class="cta eight columns center">Questions, comments, or looking for introductions?<br>Say <a href="mailto:hello@secrethandshake.ca">hello@secrethandshake.ca</a> or hit up one of our organizers.</div>
    </div>
  </div>
</section>

<section id="next-meetup" class="sec">
  <div class="inner">
    <svg class="back">
      <rect class="shape" fill="url(#wave-pattern)" x="0" y="0" width="100%" height="100%"></rect>
    </svg>
    <h2 class="section-title">Upcoming</h2>
    <div class="row">
      <div class="eight columns center meetup"></div>
    </div>
  </div>
</section>

<section id="slack">
  <div class="inner">
    <div class="seven columns offset-by-four">
      <h3>Slack Chat</h3>
      <div>Sign-up to reveive an invite to our Slack group.</div>
      <form method="post" action="/invite">
        <input type="email" name="email" placeholder="Email" class="nine columns">
        <input type="submit" value="Send" class="three columns">

        <div class="message"></div>
      </form>

      <svg class="stripes">
        <rect class="shape" x="0" y="0" width="100%" height="100%"></rect>
        <mask id="slack-mask">
          <rect x="0" y="0" width="100%" height="100%" fill="url(#stripe-pattern)">
        </mask>
      </svg>
    </div>
  </div>
</section>

{{> footer}}